<h1 class="font-bold  mb-3 md:mb-0 article-heading">Search analytics</h1>

<% if @search_queries.any? %>
  <ul class="space-y-2">
    <% @search_queries.each do |query| %>
      <li class="article-card p-2 border rounded shadow-sm bg-white">
        <strong>Query:</strong> <%= query.query %> <br>
        <strong>Last Updated:</strong> <%= query.last_updated.strftime("%Y-%m-%d %H:%M:%S") %>
        <p><strong>Times Searched:</strong> <%= query.count %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no search history yet.</p>
<% end %>
<div class="mt-6">
  <%= link_to " Back to Articles", articles_path, class: "text-white px-3 py-2 rounded article-btn " %>
</div>

