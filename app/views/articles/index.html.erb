<p class="text-green-600"><%= notice %></p>

<h1 class="font-bold text-3xl mb-3">Articles</h1>

<%= form_with(url: articles_path, method: :get, data: {controller:"search-form", turbo_frame: "articles"}) do |form| %>
  <%= form.label :query, "Search by Article name:", class: "block mb-2" %>
  
  <div class="flex space-x-3">
    <%= form.text_field :query, class: "form-input block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", data: {action:"input->search-form#search"} %>

    <%= form.submit 'Search', class: "px-4 py-3 font-medium bg-orange-300 text-neutal-900 rounded flex items-center cursor-pointer hover:bg-orange-400 focus:ring-4 ring-0 focus:ring-orange-100" %>
  </div>
<% end %>

<%= turbo_frame_tag "articles" do %>
  <%= render "articles", articles: @articles %>
<% end %>

<%= link_to "View Your Search Analytics", search_analytics_articles_path, class: "text-blue-500 hover:underline" %>

<%= link_to "New article", new_article_path, class: "mt-4 inline-block px-3 py-2 font-medium bg-orange-300 text-gray-900 rounded hover:bg-orange-400 focus:outline-none focus:shadow-outline-orange" %>
