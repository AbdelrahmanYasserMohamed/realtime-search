<p class="text-green-600"><%= notice %></p>

<div class="flex flex-col md:flex-row md:justify-between md:items-center">
  <h1 class="font-bold text-3xl mb-3 md:mb-0 article-heading" >Articles</h1>
  <div class="flex flex-col md:flex-row md:space-x-4 space-y-2 md:space-y-0">
    <%= link_to "View Your Search Analytics", search_analytics_articles_path, class: "text-white px-3 py-2 rounded article-btn" %>
    <%= link_to "New article", new_article_path, class: "text-white px-3 py-2 rounded article-btn " %>
  </div>
</div>

<%= form_with(url: articles_path, method: :get, data: {controller:"search-form", turbo_frame: "articles"}) do |form| %>
  <%= form.label :query, "Search by article title :", class: "block mb-2" %>
  <div class="flex space-x-3">
    <%= form.text_field :query, class: "form-input block w-full px-4 py-2 text-xl font-normal rounded m-0 f  focus:border-green-600 ", data: {action:"input->search-form#search"} %>
  </div>
<% end %>

<%= turbo_frame_tag "articles" do %>
  <%= render "articles", articles: @articles %>
<% end %>


